<Page x:Class="yd_pmsApp1.Views.Pages.PrintTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:yd_pmsApp1.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="标签打印测试"
      d:DataContext="{d:DesignInstance local:PrintTestPage,
                                       IsDesignTimeCreatable=False}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="标签打印测试" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧 - 标签设置区域 -->
            <ui:CardControl Grid.Column="0" Margin="0,0,10,0">
                <StackPanel Margin="16">
                    <TextBlock Text="标签设置" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

                    <TextBlock Text="标签标题:" Margin="0,8,0,4"/>
                    <ui:TextBox Text="{Binding ViewModel.LabelTitle}" PlaceholderText="请输入标签标题"/>

                    <TextBlock Text="标签内容:" Margin="0,12,0,4"/>
                    <ui:TextBox Text="{Binding ViewModel.LabelContent}" PlaceholderText="请输入标签内容" Height="60" TextWrapping="Wrap"/>

                    <TextBlock Text="字体大小:" Margin="0,12,0,4"/>
                    <ui:NumberBox Value="{Binding ViewModel.FontSize}" Minimum="8" Maximum="24" Margin="0,0,0,12"/>

                    <ui:Button Content="刷新预览" 
                              Icon="ArrowSync24"
                              Command="{Binding ViewModel.RefreshPreviewCommand}"
                              HorizontalAlignment="Right"
                              Margin="0,8,0,0"/>
                </StackPanel>
            </ui:CardControl>

            <!-- 右侧 - 标签预览区域 -->
            <ui:CardControl Grid.Column="1" Margin="10,0,0,0">
                <Grid>
                    <TextBlock Text="标签预览" FontSize="16" FontWeight="SemiBold" Margin="16,16,16,0"/>
                    <Border Name="PreviewContainer" 
                            Margin="16,48,16,16" 
                            BorderBrush="Gray" 
                            BorderThickness="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <ContentPresenter Content="{Binding ViewModel.LabelPreview}"/>
                    </Border>
                </Grid>
            </ui:CardControl>
        </Grid>

        <!-- 底部操作按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <ui:Button Content="打印预览" 
                       Icon="DocumentSearch24" 
                       Appearance="Secondary" 
                       Command="{Binding ViewModel.PrintPreviewCommand}"
                       Margin="0,0,8,0"/>

            <ui:Button Content="打印标签" 
                       Icon="Print24" 
                       Appearance="Primary"
                       Command="{Binding ViewModel.PrintLabelCommand}"/>
        </StackPanel>
    </Grid>
</Page>